@model IEnumerable<Models.Role>

@{
	string strTitle = "فهرست نقش‌ها";

	ViewBag.Title = strTitle;
}

<h2>
	@strTitle
</h2>

<div class="links">
	@Html.ActionLink("ایجاد نقش", MVC.Roles.Create(), new { @class = "btn btn-primary" })
</div>

<hr />

<div class="row">
	<div class="col-sm-12 table-responsive">
		<table class="table table-bordered table-condensed table-striped table-hover">
			<tr>
				<th style="width: 150px;"></th>
				<th style="width: 150px;">
					@*Is Active*@
					@*وضعیت*@
					@Html.DisplayNameFor(model => model.IsActive)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.ActionLink("نمایش", MVC.Roles.Details(item.Id)) |
						@Html.ActionLink("ویرایش", MVC.Roles.Edit(item.Id)) |
						@Html.ActionLink("حذف", MVC.Roles.Delete(item.Id))
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.IsActive)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
				</tr>
			}
		</table>
	</div>
</div>
